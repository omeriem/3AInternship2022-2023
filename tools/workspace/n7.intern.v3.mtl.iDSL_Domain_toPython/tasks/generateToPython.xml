<?xml version="1.0" encoding="UTF-8"?>
<project default="generateToPython" name="n7.intern.v3.mtl.iDSL_Domain_toPython">
    <property name="ECLIPSE_HOME" value="../../../eclipse/java-2022-12/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../.."/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="n7.intern.v3.mtl.iDSL_Domain_toPython.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/n7.intern.v3.mtl.iDSL_Domain_toPython/bin"/>
    </path>

    <path id="n7.intern.v3.mtl.iDSL_Domain_toPython.classpath">
        <path refid="n7.intern.v3.mtl.iDSL_Domain_toPython.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="n7.intern.v3.mtl.iDSL_Domain_toPython.libraryclasspath.alljars">
        <pathelement location="../n7.intern.v3.mtl.iDSL_Domain_toPython/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="n7.intern.v3.mtl.iDSL_Domain_toPython.classpath.alljars">
        <path refid="n7.intern.v3.mtl.iDSL_Domain_toPython.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="generateToPython">
        <java classname="n7.intern.v3.mtl.iDSL_Domain_toPython.main.GenerateToPython" classpathref="n7.intern.v3.mtl.iDSL_Domain_toPython.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="generateToPython.alljars">
        <java classname="n7.intern.v3.mtl.iDSL_Domain_toPython.main.GenerateToPython" classpathref="n7.intern.v3.mtl.iDSL_Domain_toPython.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
